<odoo>

    <record id="clv_patient_marker_view_form_patient_aux" model="ir.ui.view">
        <field name="name">clv.patient.marker.form</field>
        <field name="model">clv.patient.marker</field>
        <field name="inherit_id" ref="clv_base.clv_abstract_marker_view_form"/>
        <field name="mode">primary</field>
        <field name="priority" eval="100"/>
        <field name="arch" type="xml">
            <page name="settings" position="before">
                <page string="Patients (Aux)">
                    <group>
                        <field name="patient_aux_ids" colspan="4" nolabel="1"/>
                    </group>
                </page>
            </page>
        </field>
    </record>

    <record id="clv_patient_aux_view_tree_marker" model="ir.ui.view">
        <field name="name">clv.patient_aux.tree</field>
        <field name="model">clv.patient_aux</field>
        <field name="inherit_id" ref="clv_patient_aux_view_tree"/>
        <field name="priority" eval="20"/>
        <field name="arch" type="xml">
            <field name="code" position="after">
                <field name="marker_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
            </field>
        </field>
    </record>

    <record id="clv_patient_aux_view_form_marker" model="ir.ui.view">
        <field name="name">clv.patient_aux.form</field>
        <field name="model">clv.patient_aux</field>
        <field name="inherit_id" ref="clv_patient_aux_view_form"/>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <label for="name" position="before">
                <label for="marker_ids" class="oe_edit_only"/>
                <h4><field name="marker_ids" widget="many2many_tags" placeholder="Markers..." options="{'color_field': 'color', 'no_open': False, 'no_create': True}"/></h4>
            </label>
        </field>
    </record>

    <record id="clv_patient_aux_view_search_marker" model="ir.ui.view">
        <field name="name">clv.patient_aux.search</field>
        <field name="model">clv.patient_aux</field>
        <field name="inherit_id" ref="clv_patient_aux_view_search"/>
        <field name="priority" eval="20"/>
        <field name="arch" type="xml">
            <field name="code" position="after">
                <field name="marker_ids"/>
                <field name="marker_names"/>
            </field>
            <group name="group_by" position="inside">
                <filter name="filter_patient_aux_marker" string="Markers" context="{'group_by': 'marker_names'}"/>
            </group>
        </field>
    </record>

</odoo>
