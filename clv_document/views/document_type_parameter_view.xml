<odoo>
        
    <record id="clv_document_type_parameter_view_form" model="ir.ui.view">
        <field name="name">clv.document.type.parameter.form</field>
        <field name="model">clv.document.type.parameter</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div name="button_box" class="oe_right oe_button_box">
                    </div>
                    <notebook>
                        <page string="Main Info">
                            <group>
                                <field name="name"/>
                                <field name="item_code"/>
                                <field name="item_type"/>
                            </group>
                            <group>
                            </group>
                            <group>
                                <field name="document_type_id" options="{'no_open': False, 'no_create': True}"/>
                            </group>
                        </page>
                        <page name="settings" string="Settings" groups="clv_base.group_reguser" invisible="False">
                            <group name="settings_top">
                                <group name="settings_left">
                                    <field name="id"/>
                                </group>
                                <group name='settings_right'>
                                    <div class="oe_button_box" name="settings_buttons">
                                        <button name="toggle_active"
                                                    type="object"
                                                    class="oe_stat_button"
                                                    icon="fa-archive"
                                                    groups="clv_base.group_reguser"
                                                    >
                                                <field name="active"
                                                       widget="boolean_button"
                                                       options='{"terminology": "archive"}'
                                                       />
                                        </button>
                                    </div>
                                </group>
                                <group name="settings_left_3">
                                </group>
                                <group name='settings_right_3'>
                                    <div class="oe_button_box" name="settings_buttons_3">
                                    </div>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="clv_document_type_parameter_view_tree" model="ir.ui.view">
        <field name="name">clv.document.type.parameter.tree</field>
        <field name="model">clv.document.type.parameter</field>
        <field name="arch" type="xml">
            <tree string='Document Parameter'>
                <field name="document_type_id"/>
                <field name="name"/>
                <field name="item_code"/>
                <field name="item_type"/>
            </tree>
        </field>
    </record>
    
    <record id="clv_document_type_parameter_view_search" model="ir.ui.view">
        <field name="name">clv.document.type.parameter.select</field>
        <field name="model">clv.document.type.parameter</field>
        <field name="arch" type="xml">
            <search string="Search Document Parameter">
                <field name="document_type_id"/>
                <field name="name"/>
                <field name="item_code"/>
                <field name="item_type"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                <group name="group_by" expand="0" string="Group By...">
                    <filter name="filter_document_type_id" string="Document Type" domain="[]" context="{'group_by': 'document_type_id'}"/>
                    <filter name="filter_name" string="Parameter" domain="[]" context="{'group_by': 'name'}"/>
                    <filter name="filter_item_code" string="Item Code" domain="[]" context="{'group_by': 'item_code'}"/>
                    <filter name="filter_item_type" string="Item Type" domain="[]" context="{'group_by': 'item_type'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <record id="clv_document_type_parameter_action" model="ir.actions.act_window">
        <field name="name">Document Type Parameter</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">clv.document.type.parameter</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="clv_document_type_parameter_view_search" />
        <field name="domain">[]</field>
        <field name="context">{'search_default_filter_document_type_id':1}</field>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Click to add a new document type parameter.
          </p>
        </field>
    </record>
    
    <record id="clv_document_type_view_form_parameter" model="ir.ui.view">
        <field name="name">clv.document.type.form</field>
        <field name="model">clv.document.type</field>
        <field name="inherit_id" ref="clv_document.clv_document_type_view_form"/>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <field name="notes" position="after">
                <field name="parameter_ids" colspan="4" nolabel="1">
                    <tree string="Parameters">
                        <field name="name"/>
                        <field name="item_code"/>
                        <field name="item_type"/>
                    </tree>
                </field>
            </field>
        </field>
    </record>

</odoo>
