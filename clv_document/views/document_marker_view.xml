<odoo>

    <record id="clv_document_marker_view_form" model="ir.ui.view">
        <field name="name">clv.document.marker.form</field>
        <field name="model">clv.document.marker</field>
        <field name="inherit_id" ref="clv_base.clv_abstract_marker_view_form"/>
        <field name="mode">primary</field>
        <field name="priority" eval="100"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="attributes">
                <attribute name="string">Document Marker</attribute>
            </xpath>
            <page name="settings" position="before">
                <page string="Documents">
                    <group>
                        <field name="document_ids" colspan="4" nolabel="1"/>
                    </group>
                </page>
            </page>
        </field>
    </record>

    <record id="clv_document_marker_view_tree" model="ir.ui.view">
        <field name="name">clv.document.marker.tree</field>
        <field name="model">clv.document.marker</field>
        <field name="inherit_id" ref="clv_base.clv_abstract_marker_view_tree" />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="string">Document Markers</attribute>
            </xpath>
        </field>
    </record>

    <record id="clv_document_marker_view_search" model="ir.ui.view">
        <field name="name">clv.document.marker.search</field>
        <field name="model">clv.document.marker</field>
        <field name="inherit_id" ref="clv_base.clv_abstract_marker_view_search" />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <xpath expr="//search" position="attributes">
                <attribute name="string">Document Markers</attribute>
            </xpath>
        </field>
    </record>

    <record id="clv_document_marker_action" model="ir.actions.act_window">
        <field name="name">Document Markers</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">clv.document.marker</field>
        <!--*field name="view_type">form</field-->
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="clv_document_marker_view_search"/>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="view_id" eval="False"/>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Click to add a new document marker.
          </p>
        </field>
    </record>
    
    <record id="clv_document_view_tree_marker" model="ir.ui.view">
        <field name="name">clv.document.tree</field>
        <field name="model">clv.document</field>
        <field name="inherit_id" ref="clv_document_view_tree"/>
        <field name="priority" eval="20"/>
        <field name="arch" type="xml">
            <field name="code" position="after">
                <field name="marker_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
            </field>
        </field>
    </record>

    <record id="clv_document_view_form_marker" model="ir.ui.view">
        <field name="name">clv.document.form</field>
        <field name="model">clv.document</field>
        <field name="inherit_id" ref="clv_document_view_form"/>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <label for="code" position="before">
                <label for="marker_ids" class="oe_edit_only"/>
                <h4><field name="marker_ids" widget="many2many_tags" placeholder="Markers..." options="{'color_field': 'color', 'no_open': False, 'no_create': True}"/></h4>
            </label>
        </field>
    </record>

    <record id="clv_document_view_search_marker" model="ir.ui.view">
        <field name="name">clv.document.search</field>
        <field name="model">clv.document</field>
        <field name="inherit_id" ref="clv_document_view_search"/>
        <field name="priority" eval="20"/>
        <field name="arch" type="xml">
            <field name="code" position="after">
                <field name="marker_ids"/>
                <field name="marker_names"/>
            </field>
            <group name="group_by" position="inside">
                <filter name="filter_document_marker" string="Markers" context="{'group_by': 'marker_names'}"/>
            </group>
        </field>
    </record>

</odoo>
