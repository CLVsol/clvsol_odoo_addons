<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hr_employee_job_history_updt_view_form" model="ir.ui.view">
            <field name="name">hr.employee.job_history_updt.form</field>
            <field name="model">hr.employee.job_history_updt</field>
            <field name="arch" type="xml">
                <form>
                    <div class="oe_right">
                    </div>
                    <label for="employee_ids"/>
                    <field name="employee_ids"/>
                    <group>
                        <group>
                            <field name="old_job_sign_out_date"/>
                        </group>
                        <group>
                            <field name="new_job_sign_in_date"/>
                        </group>
                    </group>
                    <footer>
                        <button 
                            type="object"
                            name="do_employee_job_history_updt"
                            string="Jobs Update"
                            class="oe_highlight"
                            />
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>

            </field>
        </record>

        <!-- More button Action -->
        <act_window 
            id="hr_employee_job_history_updt_action"
            name="Employee Job History Update"
            src_model="hr.employee"
            res_model="hr.employee.job_history_updt"
            view_mode="form, tree"
            key2="client_action_multi"
            target="new"
        />

    </data>
</odoo>
