<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        
        <record id="clv_global_marker_view_form_employee" model="ir.ui.view">
            <field name="name">clv.global_marker.form</field>
            <field name="model">clv.global_marker</field>
            <field name="inherit_id" ref="clv_global_marker.clv_global_marker_view_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <page name="marker_for" position="inside">
                    <group string="Employees">
                        <field name="employee_ids" colspan="4" nolabel="1"/>
                    </group>
                </page>
            </field>
        </record>

        <record id="hr_view_employee_form_global_marker" model="ir.ui.view">
            <field name="name">hr.employee.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="priority" eval="6"/>
            <field name="arch" type="xml">
                <field name="category_ids" position="after">
                    <group>
                        <group>
                            <field name="global_marker_id" options='{"no_open": True, "no_create": True}'/>
                        </group>
                    </group>
                </field>
            </field>
        </record>

        <record id="hr_view_employee_tree_global_marker" model="ir.ui.view">
            <field name="name">hr.employee.tree</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_tree"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <field name="parent_id" position="after">
                    <field name="global_marker_id" groups="clv_global_marker.group_user"/>
                </field>
            </field>
        </record>

        <record id="hr_view_employee_filter_global_marker" model="ir.ui.view">
            <field name="name">hr.employee.search</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_filter"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <field name="category_ids" position="after">
                    <field name="global_marker_id"/>
                </field>
                <field name="job_id" position="after">
                    <filter string="Global Markers" context="{'group_by': 'global_marker_id'}"/>
                </field>
            </field>
        </record>

    </data>
</odoo>
