<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="clv_survey_export_xml_view_form" model="ir.ui.view">
            <field name="name">clv.survey.export_xml.form</field>
            <field name="model">clv.survey.export_xml</field>
            <field name="arch" type="xml">
                <form>
                    <div class="oe_right">
                    </div>
                    <label for="survey_ids"/>
                    <field name="survey_ids"/>
                    <group>
                        <field name="dir_path"/>
                        <field name="file_name"/>
                    </group>
                    <footer>
                        <button 
                            type="object"
                            name="do_survey_export_xml"
                            string="Export XML"
                            class="oe_highlight"
                            />
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>

            </field>
        </record>

        <!-- More button Action -->
        <act_window 
            id="clv_survey_export_xml_action"
            name="Survey Export XML"
            src_model="survey.survey"
            res_model="clv.survey.export_xml"
            view_mode="form, tree"
            key2="client_action_multi"
            target="new"
        />

    </data>
</odoo>
