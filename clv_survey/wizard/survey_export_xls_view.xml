<odoo>

    <record id="clv_survey_export_xls_view_form" model="ir.ui.view">
        <field name="name">clv.survey.export_xls.form</field>
        <field name="model">clv.survey.export_xls</field>
        <field name="arch" type="xml">
            <form>
                <div class="oe_right">
                </div>
                <label for="survey_ids"/>
                <field name="survey_ids"/>
                <group>
                    <field name="dir_path"/>
                    <field name="file_name"/>
                    <field name="password"/>
                    <field name="file_format"/>
                </group>
                <footer>
                    <button 
                        type="object"
                        name="do_survey_export_xls"
                        string="Export XLS"
                        class="oe_highlight"
                        />
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>

        </field>
    </record>

    <!-- More button Action -->
    <record id="clv_survey_export_xls_action" model="ir.actions.act_window">
        <field name="name">Survey Export XLS</field>
        <field name="binding_model_id" ref="model_survey_survey"/>
        <field name="res_model">clv.survey.export_xls</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
