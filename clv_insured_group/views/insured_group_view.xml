<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="clv_insured_group_view_form" model="ir.ui.view">
            <field name="name">clv.insured_group.form</field>
            <field name="model">clv.insured_group</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div name="button_box" class="oe_right oe_button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive" groups="clv_base.group_reguser">
                                <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        <div name="center" class="oe_center">
                            <label for="name" class="oe_edit_only"/>
                            <h1> <field name="name" default_focus="1" placeholder="Insured Group Name..."/></h1>
                        </div>
                        <div name="title" class="oe_title">
                            <label for="alias" class="oe_edit_only"/>
                            <h3><field name="alias" placeholder="Insured Group Alias..."/></h3>
                            <label for="code" class="oe_edit_only"/>
                            <h3><field name="code" placeholder="Insured Group Code..."/></h3>
                        </div>
                        <group name="group_top">
                            <group name="group_left">
                                <field name="date_inclusion"/>
                            </group>
                            <group name="group_right">
                            </group>
                        </group>
                        <field name="notes" placeholder="Notes..." colspan="4"/>
                        <notebook>
                            <page name="settings" string="Settings" groups="clv_base.group_reguser" invisible="True">
                                <group name="settings">
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="clv_insured_group_view_tree" model="ir.ui.view">
            <field name="name">clv.insured_group.tree</field>
            <field name="model">clv.insured_group</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree name="communities" string="Insured Groups">
                    <field name="name"/>
                    <field name="alias"/>
                    <field name="code"/>
                    <field name="date_inclusion"/>
                    <field name="notes"/>
                    <field name="active" invisible="1"/>
                </tree>
            </field>
        </record>
        
        <record id="clv_insured_group_view_search" model="ir.ui.view">
            <field name="name">clv.insured_group.search</field>
            <field name="model">clv.insured_group</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="alias"/>
                    <field name="code"/>
                    <field name="date_inclusion"/>
                    <field name="notes"/>
                    <separator/>
                    <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                    <group name="group_by" string="Group By...">
                    </group>
                </search>
            </field>
        </record>
        
        <record id="clv_insured_group_action" model="ir.actions.act_window">
            <field name="name">Insured Groups</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">clv.insured_group</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="clv_insured_group_view_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a new insured group.
              </p>
            </field>
        </record>
        
    </data>
</odoo>
