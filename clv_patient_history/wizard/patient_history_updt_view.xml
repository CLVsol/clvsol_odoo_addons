<odoo>

    <record id="clv_patient_history_updt_view_form" model="ir.ui.view">
        <field name="name">clv.patient.history_updt.form</field>
        <field name="model">clv.patient.history_updt</field>
        <field name="arch" type="xml">
            <form>
                <div class="oe_right">
                </div>
                <label for="patient_ids"/>
                <field name="patient_ids"/>
                <group>
                    <group>
                        <field name="date_sign_out"/>
                    </group>
                    <group>
                        <field name="date_sign_in"/>
                    </group>
                </group>
                <footer>
                    <button 
                        type="object"
                        name="do_patient_history_updt"
                        string="Patient History Update"
                        class="oe_highlight"
                        />
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>

        </field>
    </record>

    <!-- More button Action -->
    <record id="clv_patient_history_updt_action" model="ir.actions.act_window">
        <field name="name">Patient History Update</field>
        <field name="binding_model_id" ref="clv_patient.model_clv_patient"/>
        <field name="res_model">clv.patient.history_updt</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
