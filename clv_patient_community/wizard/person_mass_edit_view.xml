        <field name="model">clv.person.mass_edit</field>
        <field name="inherit_id" ref="clv_person.clv_person_mass_edit_view_form"/>
        <field name="priority" eval="8" />
        <field name="arch" type="xml">
            <group name="marker_ids" position="after">
                <group>
