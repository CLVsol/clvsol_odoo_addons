<odoo>

    <record id="clv_employee_mass_edit_view_form_phase" model="ir.ui.view">
        <field name="name">hr.employee.mass_edit.form</field>
        <field name="model">hr.employee.mass_edit</field>
        <field name="inherit_id" ref="clv_employee.hr_employee_mass_edit_view_form"/>
        <field name="priority" eval="8" />
        <field name="arch" type="xml">
            <group name="global_tag_ids" position="after">
                <group>
                    <field name="phase_id_selection"/>
                </group>
                <group name="phase_id">
                    <field name="phase_id" options="{'no_open': False, 'no_create': True}" nolabel='1'/>
                </group>
            </group>
        </field>
    </record>

</odoo>
