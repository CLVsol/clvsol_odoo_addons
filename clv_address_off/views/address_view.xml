<odoo>
        
    <record id="clv_address_off_view_form_address" model="ir.ui.view">
        <field name="name">clv.address_off.form</field>
        <field name="model">clv.address_off</field>
        <field name="inherit_id" ref="clv_address_off.clv_address_off_view_form"/>
        <field name="priority" eval="6"/>
        <field name="arch" type="xml">
            <group name="group_top" position="after">
                <group name="group_bottom" string="Related Address">
                    <group name="group_bottom_left">
                        <field name="related_address_id" options='{"no_open": False, "no_create": True}'/>
                        <field name="related_address_name" invisible="True"/>
                        <field name="related_address_code" invisible="True"/>
                        <field name="related_address_category_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_open': False, 'no_create': True}"/>
                    </group>
                    <group name="group_bottom_right">
                        <button name="do_address_off_get_related_address_data"
                                type="object"
                                class="oe_stat_button, oe_edit_only"
                                icon="fa-download"
                                string=" Get Related Address Data"
                                confirm="Are you sure you want to copy the 'Related Address' data?"
                                attrs="{'invisible': [('related_address_id', '=', False)]}"
                                >
                        </button>
                    </group>
                </group>
            </group>
        </field>
    </record>

    <record id="clv_address_off_view_tree_address" model="ir.ui.view">
        <field name="name">clv.address_off.tree</field>
        <field name="model">clv.address_off</field>
        <field name="inherit_id" ref="clv_address_off_view_tree"/>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <field name="code" position="after">
                <field name="related_address_id"/>
            </field>
        </field>
    </record>

    <record id="clv_address_off_view_search_address" model="ir.ui.view">
        <field name="name">clv.address_off.search</field>
        <field name="model">clv.address_off</field>
        <field name="inherit_id" ref="clv_address_off.clv_address_off_view_search"/>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <field name="code" position="after">
                <field name="related_address_id"/>
            </field>
        </field>
    </record>

</odoo>
