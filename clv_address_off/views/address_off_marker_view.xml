<odoo>

    <record id="clv_address_off_view_tree_marker" model="ir.ui.view">
        <field name="name">clv.address_off.tree</field>
        <field name="model">clv.address_off</field>
        <field name="inherit_id" ref="clv_address_off_view_tree"/>
        <field name="priority" eval="20"/>
        <field name="arch" type="xml">
            <field name="code" position="after">
                <field name="marker_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
            </field>
        </field>
    </record>

    <record id="clv_address_off_view_form_marker" model="ir.ui.view">
        <field name="name">clv.address_off.form</field>
        <field name="model">clv.address_off</field>
        <field name="inherit_id" ref="clv_address_off_view_form"/>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <label for="name" position="before">
                <label for="marker_ids" class="oe_edit_only"/>
                <h4><field name="marker_ids" widget="many2many_tags" placeholder="Markers..." options="{'color_field': 'color', 'no_open': False, 'no_create': True}"/></h4>
            </label>
        </field>
    </record>

    <record id="clv_address_off_view_search_marker" model="ir.ui.view">
        <field name="name">clv.address_off.search</field>
        <field name="model">clv.address_off</field>
        <field name="inherit_id" ref="clv_address_off_view_search"/>
        <field name="priority" eval="20"/>
        <field name="arch" type="xml">
            <field name="code" position="after">
                <field name="marker_ids"/>
                <field name="marker_names"/>
            </field>
            <group name="group_by" position="inside">
                <filter name="filter_address_off_marker" string="Markers" context="{'group_by': 'marker_names'}"/>
            </group>
        </field>
    </record>

</odoo>
