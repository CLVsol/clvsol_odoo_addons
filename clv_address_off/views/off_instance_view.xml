<odoo>
        
    <record id="clv_address_off_view_form_off_instance" model="ir.ui.view">
        <field name="name">clv.address_off.form</field>
        <field name="model">clv.address_off</field>
        <field name="inherit_id" ref="clv_address_off_view_form"/>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <label for="name" position="before">
                <label for="off_instance_id" class="oe_edit_only"/>
                <h4><field name="off_instance_id" options="{'no_open': True, 'no_create': True}"/></h4>
            </label>
        </field>
    </record>

    <record id="clv_address_off_view_tree_off_instance" model="ir.ui.view">
        <field name="name">clv.address_off.tree</field>
        <field name="model">clv.address_off</field>
        <field name="inherit_id" ref="clv_address_off_view_tree"/>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <field name="name" position="before">
                <field name="off_instance_id"/>
            </field>
        </field>
    </record>

    <record id="clv_address_off_view_search_off_instance" model="ir.ui.view">
        <field name="name">clv.address_off.search</field>
        <field name="model">clv.address_off</field>
        <field name="inherit_id" ref="clv_address_off_view_search"/>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <field name="code" position="after">
                <field name="off_instance_id"/>
            </field>
            <group name="group_by" position="inside">
                <filter name="group_by_off_instance_id" string="Off Instance" context="{'group_by': 'off_instance_id'}"/>
            </group>
        </field>
    </record>

</odoo>
