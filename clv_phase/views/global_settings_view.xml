<odoo>
        
    <record id="clv_global_settings_view_form_person_history" model="ir.ui.view">
        <field name="name">clv.global_settings.form</field>
        <field name="model">clv.global_settings</field>
        <field name="inherit_id" ref="clv_base.clv_global_settings_view_form"/>
        <field name="priority" eval="20" />
        <field name="arch" type="xml">
            <header name="global_settings_header" position="after">
                <group string="Phase">
                    <group>
                        <field name="phase_id" options='{"no_open": True, "no_create": True}'/>
                        <field name="current_phase_id" invisible="True"/>
                    </group>
                </group>
            </header>
        </field>
    </record>
       
</odoo>
