<odoo>

    <record id="clv_phase_view_form" model="ir.ui.view">
        <field name="name">clv.phase.form</field>
        <field name="model">clv.phase</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div name="button_box" class="oe_right oe_button_box">
                    </div>
                    <div name="center" class="oe_center">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" default_focus="1" placeholder="Phase..."/></h1>
                    </div>
                    <div name="title" class="oe_title">
                        <label for="code" class="oe_edit_only"/>
                        <h2> <field name="code" placeholder="Phase Code..."/></h2>
                        <label for="description" class="oe_edit_only"/>
                        <h3><field name="description" placeholder="Description..."/></h3>
                        <field name="notes" placeholder="Notes..." colspan="4"/>
                    </div>
                    <notebook>
                        <page name="phase_for" string="Phase for">
                        </page>
                        <page name="settings" string="Settings" groups="clv_base.group_reguser" invisible="False">
                            <group name="settings_top">
                                <group name="settings_left">
                                    <field name="id"/>
                                </group>
                                <group name='settings_right'>
                                    <div class="oe_button_box" name="settings_buttons">
                                        <button name="toggle_active"
                                                    type="object"
                                                    class="oe_stat_button"
                                                    icon="fa-archive"
                                                    groups="clv_base.group_reguser"
                                                    >
                                                <field name="active"
                                                       widget="boolean_button"
                                                       options='{"terminology": "archive"}'
                                                       />
                                        </button>
                                    </div>
                                </group>
                                <group name="settings_left_3">
                                </group>
                                <group name='settings_right_3'>
                                    <div class="oe_button_box" name="settings_buttons_3">
                                    </div>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="clv_phase_view_tree" model="ir.ui.view">
        <field name="name">clv_phase.tree</field>
        <field name="model">clv.phase</field>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <tree string="Phases">
                <field name="name"/>
                <field name="code"/>
                <field name="description"/>
                <field name="notes"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>
    
    <record id="clv_phase_view_search" model="ir.ui.view">
        <field name="name">clv.phase.search</field>
        <field name="model">clv.phase</field>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <field name="description"/>
                <field name="notes"/>
                <separator/>
                <newline/>
                <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                <group name="group_by" expand="0" string="Group By...">
                </group>
            </search>
        </field>
    </record>
    
    <record id="clv_phase_action" model="ir.actions.act_window">
        <field name="name">Phases</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">clv.phase</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="clv_phase_view_search"/>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Click to add a new phase.
          </p>
        </field>
    </record>
        
</odoo>
