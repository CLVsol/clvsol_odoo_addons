<odoo>

    <record id="clv_summary_view_form" model="ir.ui.view">
        <field name="name">clv.summary.form</field>
        <field name="model">clv.summary</field>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <form>
                <header name="header">
                    <!-- To add buttons and status widget -->
                </header>
                <sheet name="summary">
                    <div name="button_box" class="oe_right oe_button_box">
                    </div>
                    <!--div name="center" class="oe_center">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" default_focus="1" placeholder="Name..."/></h1>
                    </div-->
                    <!--div name="title" class="oe_title">
                        <label for="code" class="oe_edit_only"/>
                        <h3><field name="code" placeholder="Summary Code..."/></h3>
                    </div-->
                    <group name="group_title">
                        <group name="group_title_left">
                            <field name="model"/>
                            <field name="res_id"/>
                            <field name="res_last_update"/>
                            <field name="reference" widget="reference"/>
                            <field name="reference_name"/>
                            <!--field name="method"/-->
                            <field name="action"/>
                        </group>
                        <group name="group_title_right">
                            <field name="date_summary"/>
                        </group>
                    </group>
                    <group name="group_title_bottom">
                    </group>
                    <field name="notes" placeholder="Notes..." colspan="4"/>
                    <group name="group_top">
                        <group name="group_top_left">
                        </group>
                        <group name="group_top_right">
                        </group>
                    </group>
                    <group name="group_bottom">
                    </group>
                    <notebook>
                        <page name="settings" string="Settings" groups="clv_base.group_reguser" invisible="False">
                            <group name="settings_top">
                                <group name="settings_left">
                                    <field name="id"/>
                                </group>
                                <group name='settings_right'>
                                    <div class="oe_button_box" name="settings_buttons">
                                        <button name="toggle_active"
                                                    type="object"
                                                    class="oe_stat_button"
                                                    icon="fa-archive"
                                                    groups="clv_base.group_reguser"
                                                    >
                                                <field name="active"
                                                       widget="boolean_button"
                                                       options='{"terminology": "archive"}'
                                                       />
                                        </button>
                                    </div>
                                </group>
                                <group name="settings_left_3">
                                </group>
                                <group name='settings_right_3'>
                                    <div class="oe_button_box" name="settings_buttons_3">
                                    </div>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="clv_summary_view_tree" model="ir.ui.view">
        <field name="name">clv.summary.tree</field>
        <field name="model">clv.summary</field>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <tree name="summaries" string="Summaries">
                <!--field name="name"/-->
                <!--field name="code"/-->
                <field name="model" invisible="1"/>
                <field name="res_id" invisible="1"/>
                <field name="reference_name"/>
                <field name="reference"/>
                <!--field name="method"/-->
                <field name="action"/>
                <field name="date_summary"/>
                <field name="active" invisible="1"/>
                <field name="id"/>
            </tree>
        </field>
    </record>
    
    <record id="clv_summary_view_search" model="ir.ui.view">
        <field name="name">clv.summary.search</field>
        <field name="model">clv.summary</field>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <search>
                <!--field name="name"/-->
                <!--field name="code"/-->
                <field name="model"/>
                <field name="res_id"/>
                <field name="reference"/>
                <field name="reference_name"/>
                <!--field name="method"/-->
                <field name="action"/>
                <field name="date_summary"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                <group name="group_by" expand="0" string="Group By...">
                    <filter name="group_by_model" string="Model Name" domain="[]" context="{'group_by':'model'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <record id="clv_summary_action" model="ir.actions.act_window">
        <field name="name">Summaries</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">clv.summary</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="clv_summary_view_search"/>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Click to add a new summary.
          </p>
        </field>
    </record>
        
</odoo>
