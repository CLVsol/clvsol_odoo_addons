<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        
        <record id="clv_history_marker_view_form_person" model="ir.ui.view">
            <field name="name">clv.history_marker.form</field>
            <field name="model">clv.history_marker</field>
            <field name="inherit_id" ref="clv_history_marker.clv_history_marker_view_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <page name="marker_for" position="inside">
                    <group string="Persons">
                        <field name="person_ids" colspan="4" nolabel="1"/>
                    </group>
                </page>
            </field>
        </record>

        <record id="clv_person_view_form_history_marker" model="ir.ui.view">
            <field name="name">clv.person.form</field>
            <field name="model">clv.person</field>
            <field name="inherit_id" ref="clv_person.clv_person_view_form"/>
            <field name="priority" eval="6"/>
            <field name="arch" type="xml">
                <group name="status" position="after">
                    <group>
                        <field name="history_marker_id" options='{"no_open": True, "no_create": True}'/>
                        <field name="address_history_marker_id" options='{"no_open": True, "no_create": True}'/>
                    </group>
                </group>
            </field>
        </record>

        <record id="clv_person_view_tree_history_marker" model="ir.ui.view">
            <field name="name">clv.person.tree</field>
            <field name="model">clv.person</field>
            <field name="inherit_id" ref="clv_person.clv_person_view_tree"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <field name="code" position="before">
                    <field name="history_marker_id" groups="clv_history_marker.group_user"/>
                    <field name="address_history_marker_id" groups="clv_history_marker.group_user"/>
                </field>
            </field>
        </record>

        <record id="clv_person_view_search_history_marker" model="ir.ui.view">
            <field name="name">clv.person.search</field>
            <field name="model">clv.person</field>
            <field name="inherit_id" ref="clv_person.clv_person_view_search"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <field name="code" position="after">
                    <field name="history_marker_id"/>
                    <field name="address_history_marker_id"/>
                </field>
                <group name="group_by" position="before">
                    <filter string="Address History Marker Set" name="filter_address_history_marker_id" domain="[('address_history_marker_id','!=',False)]"/>
                    <filter name="filter_address_history_marker_id" string="Address History Markers" context="{'group_by': 'address_history_marker_id'}"/>
                </group>
                <group name="group_by" position="inside">
                    <filter name="filter_history_marker_id" string="History Markers" context="{'group_by': 'history_marker_id'}"/>
                </group>
            </field>
        </record>

        <record id="clv_person_history_view_form_history_marker" model="ir.ui.view">
            <field name="name">clv.person.history</field>
            <field name="model">clv.person.history</field>
            <field name="inherit_id" ref="clv_person_history_view_form"/>
            <field name="priority" eval="6"/>
            <field name="arch" type="xml">
                <field name="sign_out_date" position="after">
                    <field name="history_marker_id" options='{"no_open": True, "no_create": True}'/>
                </field>
            </field>
        </record>

        <record id="clv_person_history_view_tree_history_marker" model="ir.ui.view">
            <field name="name">clv.person.history.tree</field>
            <field name="model">clv.person.history</field>
            <field name="inherit_id" ref="clv_person_history_view_tree"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <field name="sign_out_date" position="after">
                    <field name="history_marker_id" groups="clv_history_marker.group_user"/>
                </field>
            </field>
        </record>

        <record id="clv_person_history_view_search_history_marker" model="ir.ui.view">
            <field name="name">clv.person.history.search</field>
            <field name="model">clv.person.history</field>
            <field name="inherit_id" ref="clv_person_history_view_search"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <field name="sign_out_date" position="after">
                    <field name="history_marker_id"/>
                </field>
                <group name="group_by" position="inside">
                    <filter string="History Markers" context="{'group_by': 'history_marker_id'}"/>
                </group>
            </field>
        </record>

    </data>
</odoo>
