<odoo>

    <record id="clv_external_sync_batch_exec_view_form" model="ir.ui.view">
        <field name="name">clv.external_sync.batch.exec.form</field>
        <field name="model">clv.external_sync.batch.exec</field>
        <field name="arch" type="xml">
            <form>
                <div class="oe_right">
                </div>
                <label for="batch_ids" class="oe_edit_only"/>
                <field name="batch_ids">
                    <!--tree>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="age"/>
                        <field name="category_ids"/>
                        <field name="address_id" string="Current Address"/>
                    </tree-->
                </field>
                <group>
                    <group>
                        <field name="count_batches"/>
                    </group>
                </group>
                <footer>
                    <button 
                        type="object"
                        name="do_external_sync_batch_exec"
                        string="External Sync Batch Exec"
                        class="oe_highlight"
                        />
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>

        </field>
    </record>

    <!-- More button Action -->
    <act_window 
        id="clv_external_sync_batch_exec_action"
        name="External Sync Batch Exec"
        src_model="clv.external_sync.batch"
        res_model="clv.external_sync.batch.exec"
        view_mode="form"
        key2="client_action_multi"
        target="new"
    />

</odoo>
