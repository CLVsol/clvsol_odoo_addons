<odoo>
    
    <record id="clv_model_export_view_form_person" model="ir.ui.view">
        <field name="name">clv.model_export.form</field>
        <field name="model">clv.model_export</field>
        <field name="inherit_id" ref="clv_export.clv_model_export_view_form"/>
        <field name="priority" eval="7"/>
        <field name="arch" type="xml">
            <field name="date_export" position="before">
                <field name="count_export_persons" attrs="{'invisible':['|', ('export_all_items', '=', True), '|', ('export_set_elements', '=', True), ('model_model', '!=', 'clv.person')]}"/>
            </field>
            <page name="settings" position="before">
                <page name="persons" string="Persons" attrs="{'invisible':['|', ('export_all_items', '=', True), '|', ('export_set_elements', '=', True), ('model_model', '!=', 'clv.person')]}">
                    <group>
                        <field name="export_person_ids" colspan="4" nolabel="1"/>
                    </group>
                </page>
            </page>
        </field>
    </record>

</odoo>
