<odoo>
        
    <record id="clv_address_view_form_person_off" model="ir.ui.view">
        <field name="name">clv.address.form</field>
        <field name="model">clv.address</field>
        <field name="inherit_id" ref="clv_address.clv_address_view_form"/>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <page name="settings" position="before">
                <page string="Persons (Off)">
                    <group>
                        <group>
                            <field name="count_persons_off"/>
                        </group>
                        <group>
                            <button name="clv_person_off.clv_person_off_action"
                                    type="action"
                                    class="oe_stat_button"
                                    icon="fa-list"
                                    context="{'search_default_ref_address_id': id}"
                                    attrs="{'invisible': [('person_off_ids', '=', [])]}"
                                    >
                                <div class="o_form_field o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="count_persons_off"/>
                                    </span>
                                    <span class="o_stat_text"> Person(s)</span>
                                </div>
                            </button>
                        </group>
                    </group>
                    <field name="person_off_ids" colspan="4" nolabel="1"/>
                </page>
            </page>
        </field>
    </record>

    <record id="clv_address_view_tree_person_off" model="ir.ui.view">
        <field name="name">clv.address.tree</field>
        <field name="model">clv.address</field>
        <field name="inherit_id" ref="clv_address.clv_address_view_tree"/>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <field name="code" position="after">
                <field name="count_persons_off" sum="Total Number of Persons (Off)"/>
            </field>
        </field>
    </record>

    <record id="clv_person_off_view_form_address" model="ir.ui.view">
        <field name="name">clv.person_off.form</field>
        <field name="model">clv.person_off</field>
        <field name="inherit_id" ref="clv_person_off.clv_person_off_view_form"/>
        <field name="priority" eval="6"/>
        <field name="arch" type="xml">
            <group name="group_top_left" position="inside">
                <field name="ref_address_id"
                    context="{'show_ref_address_only': 1}"
                    options='{"always_reload": True, "highlight_first_line": True, "no_open": False, "no_create": True}'/>
                <field name="ref_address_code" string="Address Code"/>
                <field name="ref_address_category_names" string="Address Category Names" invisible="True"/>
                <field name="ref_address_category_ids" string="Address Categories" widget="many2many_tags" options="{'color_field': 'color', 'no_open': False, 'no_create': True}"/>
                <!--field name="person_off_ref_address_role_id" options='{"no_open": False, "no_create": True}'/-->
                <button name="do_person_off_get_ref_address_data"
                        type="object"
                        class="oe_stat_button, oe_edit_only"
                        icon="fa-download"
                        string=" Get Reference Address Data"
                        confirm="Are you sure you want to copy the 'Reference Address' data?"
                        attrs="{'invisible': [('ref_address_id', '=', False)]}"
                        >
                </button>
            </group>
        </field>
    </record>

    <record id="clv_person_off_view_tree_address" model="ir.ui.view">
        <field name="name">clv.person_off.tree</field>
        <field name="model">clv.person_off</field>
        <field name="inherit_id" ref="clv_person_off_view_tree"/>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <field name="code" position="after">
                <field name="ref_address_category_ids" string="Address Categories" widget="many2many_tags" options="{'color_field': 'color', 'no_open': False, 'no_create': True}"/>
            </field>
        </field>
    </record>

    <record id="clv_person_off_view_search_address" model="ir.ui.view">
        <field name="name">clv.person_off.search</field>
        <field name="model">clv.person_off</field>
        <field name="inherit_id" ref="clv_person_off.clv_person_off_view_search"/>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <field name="code" position="after">
                <field name="ref_address_id"/>
                <field name="ref_address_category_names"/>
            </field>
            <group name="group_by" position="inside">
                <filter name="group_by_ref_address_id" string="Address" context="{'group_by': 'ref_address_id'}"/>
                <filter name="group_by_ref_address_category_names" string="Address Categories" context="{'group_by': 'ref_address_category_names'}"/>
            </group>
        </field>
    </record>

</odoo>
