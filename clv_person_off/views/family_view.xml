<odoo>
        
    <record id="clv_family_view_form_person_off" model="ir.ui.view">
        <field name="name">clv.family.form</field>
        <field name="model">clv.family</field>
        <field name="inherit_id" ref="clv_family.clv_family_view_form"/>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <page name="settings" position="before">
                <page string="Persons (Off)">
                    <group>
                        <field name="count_persons_off"/>
                        <field name="person_off_ids" colspan="4" nolabel="1"/>
                    </group>
                </page>
            </page>
        </field>
    </record>

    <record id="clv_family_view_tree_person_off" model="ir.ui.view">
        <field name="name">clv.family.tree</field>
        <field name="model">clv.family</field>
        <field name="inherit_id" ref="clv_family.clv_family_view_tree"/>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <field name="code" position="after">
                <field name="count_persons_off" sum="Total Number of Persons (Off)"/>
            </field>
        </field>
    </record>

    <record id="clv_person_off_view_form_family" model="ir.ui.view">
        <field name="name">clv.person_off.form</field>
        <field name="model">clv.person_off</field>
        <field name="inherit_id" ref="clv_person_off.clv_person_off_view_form"/>
        <field name="priority" eval="6"/>
        <field name="arch" type="xml">
            <group name="group_top_right" position="inside">
                <field name="family_id" options='{"no_open": False, "no_create": True}'/>
                <field name="family_code" string="Family Code"/>
                <field name="family_category_ids" string="Family Categories"/>
                <!--field name="person_off_family_role_id" options='{"no_open": False, "no_create": True}'/-->
                <button name="do_person_off_remove_family"
                        type="object"
                        class="oe_stat_button, oe_edit_only"
                        icon="fa-eraser"
                        string=" Remove Family"
                        confirm="Are you sure you want to remove the 'Family'?"
                        attrs="{'invisible': [('family_id', '=', False)]}"
                        >
                </button>
            </group>
        </field>
    </record>

    <record id="clv_person_off_view_tree_family" model="ir.ui.view">
        <field name="name">clv.person_off.tree</field>
        <field name="model">clv.person_off</field>
        <field name="inherit_id" ref="clv_person_off_view_tree"/>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <field name="code" position="after">
                <field name="family_category_ids" string="Family Categories"/>
            </field>
        </field>
    </record>

    <record id="clv_person_off_view_search_family" model="ir.ui.view">
        <field name="name">clv.person_off.search</field>
        <field name="model">clv.person_off</field>
        <field name="inherit_id" ref="clv_person_off.clv_person_off_view_search"/>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <field name="code" position="after">
                <field name="family_category_ids"/>
            </field>
            <group name="group_by" position="inside">
                <filter name="group_by_family_id" string="Family" context="{'group_by': 'family_id'}"/>
                <filter name="group_by_family_category_ids" string="Family Categories" context="{'group_by': 'family_category_ids'}"/>
            </group>
        </field>
    </record>

</odoo>
