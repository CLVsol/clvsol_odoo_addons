<odoo>

    <record id="clv_person_off_associate_to_address_off_view_form" model="ir.ui.view">
        <field name="name">clv.person_off.associate_to_address_off.form</field>
        <field name="model">clv.person_off.associate_to_address_off</field>
        <field name="arch" type="xml">
            <form>
                <div class="oe_right">
                </div>
                <label for="person_off_ids"/>
                <field name="person_off_ids"/>
                <group>
                    <group>
                        <field name="create_new_address_off"/>
                    </group>
                </group>
                <footer>
                    <button 
                        type="object"
                        name="do_person_off_associate_to_address_off"
                        string="Associate to Address (Off)"
                        class="oe_highlight"
                        />
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>

        </field>
    </record>

    <!-- More button Action -->
    <act_window 
        id="clv_person_off_associate_to_address_off_action"
        name="Person (Off) Associate to Address (Off)"
        src_model="clv.person_off"
        res_model="clv.person_off.associate_to_address_off"
        view_mode="form"
        key2="client_action_multi"
        target="new"
    />

</odoo>
