<odoo>

    <record id="clv_file_system_directory_file_upload_view_form" model="ir.ui.view">
        <field name="name">clv.file_system.directory.file_upload.form</field>
        <field name="model">clv.file_system.directory.file_upload</field>
        <field name="arch" type="xml">
            <form>
                <div class="oe_right">
                </div>
                <label for="file_system_directory_ids"/>
                <field name="file_system_directory_ids"/>
                <group>
                    <group>
                        <field name="upload_file" filename="file_name"/>
                        <field name="file_name" invisible="1"/>
                    </group>
                    <group>
                    </group>
                </group>
                <footer>
                    <button 
                        type="object"
                        name="do_file_system_directory_file_upload"
                        string="File Upload"
                        class="oe_highlight"
                        />
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- More button Action -->
    <record id="clv_file_system_directory_file_upload_action" model="ir.actions.act_window">
        <field name="name">File Upload</field>
        <field name="binding_model_id" ref="model_clv_file_system_directory"/>
        <field name="res_model">clv.file_system.directory.file_upload</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
