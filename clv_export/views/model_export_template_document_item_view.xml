<odoo>
        
        <record id="clv_model_export_template_document_item_view_form" model="ir.ui.view">
        <field name="name">clv.model_export.template.document_item.form</field>
        <field name="model">clv.model_export.template.document_item</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div name="button_box" class="oe_right oe_button_box">
                    </div>
                    <notebook>
                        <page string="Main Info">
                            <group>
                                <field name="sequence"/>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="model_export_template_id" options="{'no_open': False, 'no_create': True}"/>
                                <field name="model_export_display"/>
                            </group>
                            <group>
                                <field name="document_item_id" options="{'no_open': False, 'no_create': True}"/>
                                <field name="document_item_code" readonly="True"/>
                                <field name="document_item_document_type_id" options="{'no_open': False, 'no_create': True}" readonly="True"/>
                                <field name="document_item_name" readonly="True"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="clv_model_export_template_document_item_view_tree" model="ir.ui.view">
        <field name="name">clv.model_export.template.document_item.tree</field>
        <field name="model">clv.model_export.template.document_item</field>
        <field name="arch" type="xml">
            <tree string='Model Export Template Document Item'>
                <field name="model_export_template_id"/>
                <field name="document_item_id"/>
                <field name="document_item_code"/>
                <field name="document_item_document_type_id"/>
                <field name="document_item_name"/>
                <field name="sequence"/>
                <field name="name"/>
                <field name="model_export_display"/>
            </tree>
        </field>
    </record>
    
    <record id="clv_model_export_template_document_item_view_search" model="ir.ui.view">
        <field name="name">clv.model_export.template.document_item.select</field>
        <field name="model">clv.model_export.template.document_item</field>
        <field name="arch" type="xml">
            <search string="Search Model Export Template Document Item">
                <field name="model_export_template_id"/>
                <field name="document_item_id"/>
                <field name="name"/>
                <field name="model_export_display"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                <group name="group_by" expand="0" string="Group By...">
                    <filter name="group_by_model_export_template_id" string="Model Export Template" domain="[]" context="{'group_by': 'model_export_id'}"/>
                    <filter name="group_by_document_item_document_type_id" string="Model Export Template Document Type" domain="[]" context="{'group_by': 'document_item_document_type_id'}"/>
                    <filter name="group_by_document_item_id" string="Model Export Template Document Item" domain="[]" context="{'group_by': 'document_item_id'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <record id="clv_model_export_template_document_item_action" model="ir.actions.act_window">
        <field name="name">Model Export Template Document Item</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">clv.model_export.template.document_item</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="clv_model_export_template_document_item_view_search" />
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="context">{}</field>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Click to add a new model export template document item.
          </p>
        </field>
    </record>
    
    <record id="clv_model_export_template_view_form_document_item" model="ir.ui.view">
        <field name="name">clv.model_export.template.form</field>
        <field name="model">clv.model_export.template</field>
        <field name="inherit_id" ref="clv_export.clv_model_export_template_view_form"/>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <field name="model_model" position="after">
                <field name="count_model_export_template_document_items" attrs="{'invisible':[('model_model', '!=', 'clv.person')]}"/>
            </field>
            <page name="settings" position="before">
                <page name="model_export_template_document_items" string="Model Export Template Document Items" attrs="{'invisible':[('model_model', '!=', 'clv.person')]}">
                    <!--label for="model_export_template_document_item_ids"/-->
                    <field name="model_export_template_document_item_ids" colspan="4" nolabel="1">
                        <!--tree editable="top" string="Model Export Template Fields" create="false"-->
                        <tree string="Model Export Template Document Items" create="true">
                            <field name="sequence" widget='handle'/>
                            <field name="document_item_code"/>
                            <field name="document_item_document_type_id"/>
                            <field name="document_item_name" readonly="True"/>
                            <field name="name"/>
                            <field name="model_export_display" readonly="True"/>
                        </tree>
                    </field>
                </page>
            </page>
        </field>
    </record>

</odoo>
