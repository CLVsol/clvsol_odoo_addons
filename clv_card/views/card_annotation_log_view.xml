<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        
        <record id="clv_card_annotation_view_form_log" model="ir.ui.view">
            <field name="name">clv.card.annotation.form</field>
            <field name="model">clv.card.annotation</field>
            <field name="inherit_id" ref="clv_card.clv_card_annotation_view_form"/>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <page name="settings" position="after">
                    <!--page string="Log" groups="clv_base.group_reguser" attrs="{'invisible': ['|', ('active_log', '=', False)]}"-->
                    <page string="Log" groups="clv_base.group_reguser">
                        <group name="record_log">
                            <group name="creation" >
                                <field name="create_uid" readonly="True"/>
                                <field name="create_date" readonly="True"/>
                            </group>
                            <group name="last_update" >
                                <field name="write_uid" readonly="True"/>
                                <field name="write_date" readonly="True"/>
                            </group>
                        </group>
                        <field name="log_ids" colspan="4" nolabel="1">
                            <tree string="Card Annotation Log">
                                <!--field name="card_annotation_id"/-->
                                <field name="user_id"/>
                                <field name="date_log"/>
                                <field name="values"/>
                                <field name="action"/>
                                <field name="notes"/>
                            </tree>
                        </field>
                    </page>
                </page>
                <group name="settings" position="inside">
                    <field name="active_log"/>
                </group>
                <page name="settings" position="attributes">
                    <attribute name="invisible">False</attribute>
                </page>
            </field>
        </record>

        <record id="clv_card_annotation_log_view_form" model="ir.ui.view">
            <field name="name">clv.card.annotation.log.form</field>
            <field name="model">clv.card.annotation.log</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div name="title" class="oe_title">
                            <label for="card_annotation_id" class="oe_edit_only"/>
                            <h2><field name="card_annotation_id" placeholder="Card Annotation..." readonly="True"/></h2>
                            <label for="user_id" class="oe_edit_only"/>
                            <h1><field name="user_id" default_focus="1" placeholder="User..." readonly="True"/></h1>
                            <label for="date_log" class="oe_edit_only"/>
                            <h3><field name="date_log" placeholder="When..." readonly="True"/></h3>
                            <label for="values" class="oe_edit_only"/>
                            <field name="values" placeholder="Action..."/>
                            <label for="action" class="oe_edit_only"/>
                            <field name="action" placeholder="Values..."/>
                            <label for="notes" class="oe_edit_only"/>
                            <field name="notes" placeholder="Notes..."/>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="clv_card_annotation_log_view_tree" model="ir.ui.view">
            <field name="name">clv.card.annotation.log.tree</field>
            <field name="model">clv.card.annotation.log</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree>
                    <field name="card_annotation_id"/>
                    <field name="user_id"/>
                    <field name="date_log"/>
                    <field name="values"/>
                    <field name="action"/>
                    <field name="notes"/>
                </tree>
            </field>
        </record>
        
    </data>
</odoo>
