<odoo>

    <record id="clv_person_aux_view_form_reg_state" model="ir.ui.view">
        <field name="name">clv.person_aux.form</field>
        <field name="model">clv.person_aux</field>
        <field name="inherit_id" ref="clv_person_aux.clv_person_aux_view_form"/>
        <field name="priority" eval="10"/>
        <field name="arch" type="xml">
            <header name="header" position="inside">
                <field name="reg_state" widget="statusbar"
                       statusbar_visible="revised,verified,ready,done"/>
                <button name="action_draft" type="object"
                        string="Draft"
                        confirm="Change Register State to 'Draft'?"
                        style="background-color:lightgray"
                        attrs="{'invisible':[('reg_state','not in',['canceled'])]}"
                        groups="clv_person_aux.group_manager"/>
                <button name="action_revised" type="object"
                        string="Revised"
                        confirm="Change Register State to 'Revised'?"
                        style="background-color:lightgray"
                        attrs="{'invisible':[('reg_state','in',['revised'])]}"
                        groups="clv_person_aux.group_manager"/>
                <button name="action_verified" type="object"
                        string="Verified"
                        confirm="Change Register State to 'Verified'?"
                        style="background-color:lightgray"
                        attrs="{'invisible':[('reg_state','not in',['revised'])]}"
                        groups="clv_person_aux.group_manager"/>
                <button name="action_ready" type="object"
                        string="Ready"
                        confirm="Change Register State to 'Ready'?"
                        style="background-color:lightgray"
                        attrs="{'invisible':[('reg_state','not in',['verified'])]}"
                        groups="clv_person_aux.group_manager"/>
                <button name="action_done" type="object"
                        string="Done"
                        confirm="Change Register State to 'Done'?"
                        style="background-color:lightgray"
                        attrs="{'invisible':[('reg_state','in',['draft','done','canceled'])]}"
                        groups="clv_person_aux.group_manager"/>
                <button name="action_cancel" type="object"
                        string="Cancel"
                        confirm="Change Register State to 'Cancel'?"
                        style="background-color:lightgray"
                        attrs="{'invisible':[('reg_state','in',['canceled'])]}"
                        groups="clv_person_aux.group_manager"/>
            </header>
        </field>
    </record>

    <record id="clv_person_aux_view_tree_reg_state" model="ir.ui.view">
        <field name="name">clv.person_aux.tree</field>
        <field name="model">clv.person_aux</field>
        <field name="inherit_id" ref="clv_person_aux.clv_person_aux_view_tree"/>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <field name="code" position="after">
                <field name="reg_state"/>
            </field>
            <tree name="partner_entities" position="attributes">
                <attribute name="decoration-muted">reg_state=='draft'</attribute>
                <attribute name="decoration-primary">reg_state in('done')</attribute>
                <attribute name="decoration-danger">reg_state=='canceled'</attribute>
                <attribute name="decoration-it">reg_state in('draft','canceled')</attribute>
                <attribute name="decoration-bf">reg_state in('done')</attribute>
            </tree>
        </field>
    </record>

    <record id="clv_person_aux_view_search_reg_state" model="ir.ui.view">
        <field name="name">clv.person_aux.search</field>
        <field name="model">clv.person_aux</field>
        <field name="inherit_id" ref="clv_person_aux.clv_person_aux_view_search"/>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <field name="code" position="after">
                <field name="reg_state"/>
            </field>
            <group name="group_by" position="inside">
                <filter name="group_by_reg_state" string="Register State" domain="[]" context="{'group_by':'reg_state'}"/>
            </group>
        </field>
    </record>

</odoo>
