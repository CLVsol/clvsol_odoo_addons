<odoo>
        
    <record id="clv_phase_view_form_person_aux" model="ir.ui.view">
        <field name="name">clv.phase.form</field>
        <field name="model">clv.phase</field>
        <field name="inherit_id" ref="clv_phase.clv_phase_view_form"/>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <page name="phase_for" position="inside">
                <group string="Persons (Aux)">
                    <group>
                        <button name="clv_person_aux.clv_person_aux_action"
                                type="action"
                                class="oe_stat_button"
                                icon="fa-list"
                                context="{'search_default_phase_id': id}"
                                attrs="{'invisible': [('person_aux_ids', '=', [])]}"
                                >
                            <div class="o_form_field o_stat_info">
                                <span class="o_stat_value">
                                    <field name="count_persons_aux"/>
                                </span>
                                <span class="o_stat_text"> Family(ies) (Aux)</span>
                            </div>
                        </button>
                    </group>
                    <group>
                    </group>
                    <field name="person_aux_ids" colspan="4" nolabel="1"/>
                </group>
            </page>
        </field>
    </record>

    <record id="clv_person_aux_view_form_phase" model="ir.ui.view">
        <field name="name">clv.person_aux.form</field>
        <field name="model">clv.person_aux</field>
        <field name="inherit_id" ref="clv_person_aux.clv_person_aux_view_form"/>
        <field name="priority" eval="6"/>
        <field name="arch" type="xml">
            <group name="group_top_left" position="inside">
                <field name="phase_id" options='{"no_open": True, "no_create": True}'/>
            </group>
        </field>
    </record>

    <record id="clv_person_aux_view_tree_phase" model="ir.ui.view">
        <field name="name">clv.person_aux.tree</field>
        <field name="model">clv.person_aux</field>
        <field name="inherit_id" ref="clv_person_aux.clv_person_aux_view_tree"/>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <field name="code" position="after">
                <field name="phase_id" groups="clv_phase.group_user"/>
            </field>
        </field>
    </record>

    <record id="clv_person_aux_view_search_phase" model="ir.ui.view">
        <field name="name">clv.person_aux.search</field>
        <field name="model">clv.person_aux</field>
        <field name="inherit_id" ref="clv_person_aux.clv_person_aux_view_search"/>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <field name="code" position="after">
                <field name="phase_id"/>
            </field>
            <group name="group_by" position="inside">
                <filter name="group_by_phase_id" string="Phase" context="{'group_by': 'phase_id'}"/>
            </group>
        </field>
    </record>

</odoo>
