        <act_window name="Person Address Update" id="clv_person_address_updt_wizard_action"           
            src_model="clv.person"
            res_model="clv.person.address_updt.wizard"
            view_mode="form"
            key2="client_action_multi"
            target="new"/>

    </data>
</odoo>
