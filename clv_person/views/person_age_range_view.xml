<odoo>

    <record id="view_partner_age-range_tree" model="ir.ui.view">
        <field name="name">clv.person.age_range.tree</field>
        <field name="model">clv.person.age_range</field>
        <field name="arch" type="xml">
            <tree string="Partner Age Range" editable="bottom">
                <field name="name" />
                <field name="age_from" />
                <field name="age_to" />
            </tree>
        </field>
    </record>

    <record id="view_partner_age_range_form" model="ir.ui.view">
        <field name="name">clv.person.age_range.form</field>
        <field name="model">clv.person.age_range</field>
        <field name="arch" type="xml">
            <form string="Partner Age Range">
                <sheet>
                    <group col="4">
                        <field name="name" />
                        <field name="age_from" />
                        <field name="age_to" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_partner_age_range" model="ir.actions.act_window">
        <field name="name">Age Ranges</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">clv.person.age_range</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help">
            Manage the contact age range you want to have available in your system.
            For eg: 0-10, 11-20
        </field>
    </record>

    <record id="clv_person_view_tree_age_range" model="ir.ui.view">
        <field name="name">clv.person.tree</field>
        <field name="model">clv.person</field>
        <field name="inherit_id" ref="clv_person.clv_person_view_tree" />
        <field name="arch" type="xml">
            <field name="is_deceased" position="after">
                <field
                    name="age_range_id"
                />
            </field>
        </field>
    </record>

</odoo>
