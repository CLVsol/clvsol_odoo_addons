<odoo>
        
    <record id="clv_person_view_form_address_name" model="ir.ui.view">
        <field name="name">clv.person.form</field>
        <field name="model">clv.person</field>
        <field name="inherit_id" ref="clv_person_view_form"/>
        <field name="priority" eval="10" />
        <field name="arch" type="xml">
            <field name="type" position="before">
                <field name="address_name"/>
            </field>
        </field>
    </record>

    <record id="clv_person_view_search_address_name" model="ir.ui.view">
        <field name="name">clv.person.search</field>
        <field name="model">clv.person</field>
        <field name="inherit_id" ref="clv_person.clv_person_view_search"/>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <field name="code" position="after">
                <field name="address_name"/>
            </field>
            <group name="group_by" position="inside">
                <filter name="group_by_address_name" string="Address Name" context="{'group_by': 'address_name'}"/>
            </group>
        </field>
    </record>

</odoo>
