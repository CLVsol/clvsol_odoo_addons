<odoo>

    <record id="clv_person_category_view_form" model="ir.ui.view">
        <field name="name">clv.person.category.form</field>
        <field name="model">clv.person.category</field>
        <field name="inherit_id" ref="clv_base.clv_abstract_category_view_form"/>
        <field name="mode">primary</field>
        <field name="priority" eval="100"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="attributes">
                <attribute name="string">Person Category</attribute>
            </xpath>
            <page name="settings" position="before">
                <page string="Persons">
                    <group>
                        <field name="person_ids" colspan="4" nolabel="1"/>
                    </group>
                </page>
            </page>
        </field>
    </record>

    <record id="clv_person_category_view_tree" model="ir.ui.view">
        <field name="name">clv.person.category.tree</field>
        <field name="model">clv.person.category</field>
        <field name="inherit_id" ref="clv_base.clv_abstract_category_view_tree" />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="string">Person Categories</attribute>
            </xpath>
        </field>
    </record>

    <record id="clv_person_category_view_search" model="ir.ui.view">
        <field name="name">clv.person.category.search</field>
        <field name="model">clv.person.category</field>
        <field name="inherit_id" ref="clv_base.clv_abstract_category_view_search" />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <xpath expr="//search" position="attributes">
                <attribute name="string">Person Categories</attribute>
            </xpath>
        </field>
    </record>

    <record id="clv_person_category_action" model="ir.actions.act_window">
        <field name="name">Person Categories</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">clv.person.category</field>
        <!--*field name="view_type">form</field-->
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="clv_person_category_view_search"/>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="view_id" eval="False"/>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Click to add a new person category.
          </p>
        </field>
    </record>
    
    <record id="clv_person_view_tree_category" model="ir.ui.view">
        <field name="name">clv.person.tree</field>
        <field name="model">clv.person</field>
        <field name="inherit_id" ref="clv_person_view_tree"/>
        <field name="priority" eval="20"/>
        <field name="arch" type="xml">
            <field name="code" position="after">
                <field name="category_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="category_names_suport" invisible="True"/>
            </field>
        </field>
    </record>

    <record id="clv_person_view_form_category" model="ir.ui.view">
        <field name="name">clv.person.form</field>
        <field name="model">clv.person</field>
        <field name="inherit_id" ref="clv_person_view_form"/>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <label for="name" position="before">
                <label for="category_ids" class="oe_edit_only"/>
                <h4><field name="category_ids" widget="many2many_tags" placeholder="Categories..." options="{'color_field': 'color', 'no_open': False, 'no_create': True}"/></h4>
            </label>
        </field>
    </record>

    <record id="clv_person_view_search_category" model="ir.ui.view">
        <field name="name">clv.person.search</field>
        <field name="model">clv.person</field>
        <field name="inherit_id" ref="clv_person_view_search"/>
        <field name="priority" eval="20"/>
        <field name="arch" type="xml">
            <field name="code" position="after">
                <field name="category_ids"/>
            </field>
            <group name="group_by" position="inside">
                <filter name="filter_category_names" string="Categories" context="{'group_by': 'category_names'}"/>
            </group>
        </field>
    </record>

</odoo>
