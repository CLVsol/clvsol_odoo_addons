<odoo>
        
    <record id="clv_address_history_view_form_employee" model="ir.ui.view">
        <field name="name">clv.address.history</field>
        <field name="model">clv.address.history</field>
        <field name="inherit_id" ref="clv_address_history.clv_address_history_view_form"/>
        <field name="priority" eval="5"/>
        <field name="arch" type="xml">
            <group name="history" position="after">
                <group name="employee">
                    <field name="employee_id" options="{'no_open': False, 'no_create': True}"/>
                </group>
            </group>
        </field>
    </record>

    <record id="clv_address_history_view_tree_employee" model="ir.ui.view">
        <field name="name">clv.address.history.tree</field>
        <field name="model">clv.address.history</field>
        <field name="inherit_id" ref="clv_address_history.clv_address_history_view_tree"/>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <field name="date_sign_out" position="after">
                <field name="employee_id"/>
            </field>
        </field>
    </record>

    <record id="clv_address_history_view_search_employee" model="ir.ui.view">
        <field name="name">clv.address.history.search</field>
        <field name="model">clv.address.history</field>
        <field name="inherit_id" ref="clv_address_history.clv_address_history_view_search"/>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <field name="date_sign_out" position="after">
                <field name="employee_id"/>
            </field>
            <group name="group_by" position="inside">
                <filter name="group_by_employee_id" string="Responsible EmpÄºoyee" context="{'group_by': 'employee_id'}"/>
            </group>
        </field>
    </record>

</odoo>
