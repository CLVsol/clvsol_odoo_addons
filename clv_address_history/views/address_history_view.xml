<odoo>

    <record id="clv_address_history_view_form" model="ir.ui.view">
        <field name="name">clv.address.history.form</field>
        <field name="model">clv.address.history</field>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div name="button_box" class="oe_right oe_button_box">
                    </div>
                    <div name="title" class="oe_title">
                        <group name="history">
                            <field name="date_sign_in"/>
                            <field name="date_sign_out"/>
                        </group>
                    </div>
                    <notebook>
                        <page name="settings" string="Settings" groups="clv_base.group_reguser" invisible="False">
                            <group name="settings_top">
                                <group name="settings_left">
                                    <field name="id"/>
                                </group>
                                <group name='settings_right'>
                                    <div class="oe_button_box" name="settings_buttons">
                                        <button name="toggle_active"
                                                    type="object"
                                                    class="oe_stat_button"
                                                    icon="fa-archive"
                                                    groups="clv_base.group_reguser"
                                                    >
                                                <field name="active"
                                                       widget="boolean_button"
                                                       options='{"terminology": "archive"}'
                                                       />
                                        </button>
                                    </div>
                                </group>
                                <group name="settings_left_3">
                                </group>
                                <group name='settings_right_3'>
                                    <div class="oe_button_box" name="settings_buttons_3">
                                    </div>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="clv_address_history_view_tree" model="ir.ui.view">
        <field name="name">clv.address.history.tree</field>
        <field name="model">clv.address.history</field>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <tree colors="red:date_sign_out != False;blue:date_sign_out == False">
                <field name="date_sign_in"/>
                <field name="date_sign_out"/>
            </tree>
        </field>
    </record>
    
    <record id="clv_address_history_view_search" model="ir.ui.view">
        <field name="name">clv.address.history.search</field>
        <field name="model">clv.address.history</field>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <search>
                <field name="date_sign_in"/>
                <field name="date_sign_out"/>
                <newline/>
                <filter name="opened" string="Opened Address History" domain="[('date_sign_out','=',False)]"/>
                <filter name="closed" string="Closed Address History" domain="[('date_sign_out','!=',False)]"/>
                <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                <group name="group_by" expand="0" string="Group By...">
                </group>
            </search>
        </field>
    </record>

    <record id="clv_address_history_action" model="ir.actions.act_window">
        <field name="name">Address History</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">clv.address.history</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="clv_address_history_view_search"/>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="context">{}</field>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Click to add a new address history item.
          </p>
        </field>
    </record>
    
</odoo>

