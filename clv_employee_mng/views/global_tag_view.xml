<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        
        <record id="clv_global_tag_view_form_employee_mng" model="ir.ui.view">
            <field name="name">clv.global_tag.form</field>
            <field name="model">clv.global_tag</field>
            <field name="inherit_id" ref="clv_global_tag.clv_global_tag_view_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <page name="tag_for" position="inside">
                    <group string="Employees Management">
                        <field name="employee_ids" colspan="4" nolabel="1"/>
                    </group>
                </page>
            </field>
        </record>

        <record id="clv_employee_mng_view_form_global_tag" model="ir.ui.view">
            <field name="name">clv.employee.mng.form</field>
            <field name="model">clv.employee.mng</field>
            <field name="inherit_id" ref="clv_employee_mng_view_form"/>
            <field name="priority" eval="6"/>
            <field name="arch" type="xml">
                <label for="name" position="before">
                    <label for="global_tag_ids"  groups="clv_global_tag.group_user" class="oe_edit_only"/>
                    <h4><field name="global_tag_ids" widget="many2many_tags" placeholder="Global Tags..." options="{'no_open': False, 'no_create': True}" groups="clv_global_tag.group_user"/></h4>
                </label>
            </field>
        </record>

        <record id="clv_employee_mng_view_tree_global_tag" model="ir.ui.view">
            <field name="name">clv.employee.mng.tree</field>
            <field name="model">clv.employee.mng</field>
            <field name="inherit_id" ref="clv_employee_mng_view_tree"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <field name="professional_id" position="before">
                    <field name="global_tag_ids" groups="clv_global_tag.group_user"/>
                    <field name="global_tag_names_suport" invisible="True"/>
                </field>
            </field>
        </record>

        <record id="clv_employee_mng_view_search_global_tag" model="ir.ui.view">
            <field name="name">clv.employee.mng.search</field>
            <field name="model">clv.employee.mng</field>
            <field name="inherit_id" ref="clv_employee_mng_view_search"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <field name="professional_id" position="after">
                    <field name="global_tag_ids"/>
                </field>
                <group name="group_by" position="inside">
                    <filter string="Global Tags" context="{'group_by': 'global_tag_names'}"/>
                </group>
            </field>
        </record>

    </data>
</odoo>
