<odoo>

    <record id="clv_address_aux_set_code_view_form" model="ir.ui.view">
        <field name="name">clv.address_aux.set_code.form</field>
        <field name="model">clv.address_aux.set_code</field>
        <field name="arch" type="xml">
            <form>
                <div class="oe_right">
                </div>
                <label for="address_aux_ids"/>
                <field name="address_aux_ids"/>
                <group>
                    <group>
                        <field name="address_aux_verification_exec"/>
                    </group>
                </group>
                <footer>
                    <button 
                        type="object"
                        name="do_address_aux_set_code"
                        string="Set Code"
                        class="oe_highlight"
                        />
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>

        </field>
    </record>

    <!-- More button Action -->
    <record id="clv_address_aux_set_code_action" model="ir.actions.act_window">
        <field name="name">Address (Aux) Set Code</field>
        <field name="binding_model_id" ref="model_clv_address_aux"/>
        <field name="res_model">clv.address_aux.set_code</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
