<odoo>

    <record id="clv_verification_view_form" model="ir.ui.view">
        <field name="name">clv.verification.form</field>
        <field name="model">clv.verification</field>
        <field name="arch" type="xml">
            <form string="Verification">
                <header name="header">
                    <!-- To add buttons and status widget -->
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="model"/>
                            <field name="res_id"/>
                            <field name="res_last_update"/>
                            <field name="reference" widget="reference"/>
                            <field name="reference_name"/>
                            <field name="method"/>
                            <field name="action"/>
                        </group>
                        <group>
                            <field name="date_verification"/>
                            <field name="state"/>
                        </group>
                    </group>
                    <field name="verification_outcomes" placeholder="Verification Outcomes..." colspan="4"/>
                    <notebook>
                        <page name="settings" string="Settings" groups="clv_base.group_reguser" invisible="False">
                            <group name="settings_top">
                                <group name="settings_left">
                                    <field name="id"/>
                                </group>
                                <group name='settings_right'>
                                    <div class="oe_button_box" name="settings_buttons">
                                        <button name="toggle_active"
                                                    type="object"
                                                    class="oe_stat_button"
                                                    icon="fa-archive"
                                                    groups="clv_base.group_reguser"
                                                    >
                                                <field name="active"
                                                       widget="boolean_button"
                                                       options='{"terminology": "archive"}'
                                                       />
                                        </button>
                                    </div>
                                </group>
                                <group name="settings_left_3">
                                </group>
                                <group name='settings_right_3'>
                                    <div class="oe_button_box" name="settings_buttons_3">
                                    </div>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="clv_verification_view_tree" model="ir.ui.view">
        <field name="name">clv.verification.tree</field>
        <field name="model">clv.verification</field>
        <field name="arch" type="xml">
            <tree name="verification" string="Verification"
                decoration-muted="state in('unknown','missing')"
                decoration-info="state=='updated'"
                decoration-warning="state=='warned'"
                decoration-danger="state=='failed'"
                decoration-success="state=='ok'"
                decoration-it="state in('unknown','missing')"
                decoration-bf="state in('warned','failed','ok')">
                <field name="model"/>
                <field name="res_id"/>
                <field name="res_last_update"/>
                <field name="reference"/>
                <field name="reference_name"/>
                <field name="method"/>
                <field name="action"/>
                <field name="date_verification"/>
                <field name="state"/>
                <field name="verification_outcomes"/>
                <field name="id"/>
            </tree>
        </field>
    </record>

    <record id="clv_verification_view_search" model="ir.ui.view">
        <field name="name">clv.verification.search</field>
        <field name="model">clv.verification</field>
        <field name="arch" type="xml">
            <search string="Verification">
                <field name="model"/>
                <field name="res_id"/>
                <field name="reference"/>
                <field name="reference_name"/>
                <field name="method"/>
                <field name="action"/>
                <field name="state"/>
                <field name="verification_outcomes"/>
                <field name="id"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                <group name="group_by" expand="0" string="Group By...">
                    <filter name="filter_model" string="Model Name" domain="[]" context="{'group_by':'model'}"/>
                    <filter name="filter_reference" string="Reference" domain="[]" context="{'group_by':'reference'}"/>
                    <filter name="filter_reference_name" string="Reference Name" domain="[]" context="{'group_by':'reference_name'}"/>
                    <filter name="filter_method" string="Method" domain="[]" context="{'group_by':'method'}"/>
                    <filter name="filter_action" string="Action" domain="[]" context="{'group_by':'action'}"/>
                    <filter name="filter_state" string="Verification Status" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="clv_verification_action">
        <field name="name">Verifications</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">clv.verification</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
