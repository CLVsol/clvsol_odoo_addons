<odoo>

    <record id="clv_verification_schedule_mass_edit_view_form" model="ir.ui.view">
        <field name="name">clv.verification.schedule.mass_edit.form</field>
        <field name="model">clv.verification.schedule.mass_edit</field>
        <field name="arch" type="xml">
            <form>
                <div class="oe_right">
                </div>
                <label for="verification_schedule_ids"/>
                <field name="verification_schedule_ids"/>
                <group>
                    <group name="verification_max_task_selection">
                        <field name="verification_max_task_selection"/>
                    </group>
                    <group>
                        <field name="verification_max_task" nolabel='1'/>
                    </group>
                    <group>
                        <field name="verification_disable_identification_selection"/>
                    </group>
                    <group>
                        <field name="verification_disable_identification" nolabel='1'/>
                    </group>
                    <group>
                        <field name="verification_disable_check_missing_selection"/>
                    </group>
                    <group>
                        <field name="verification_disable_check_missing" nolabel='1'/>
                    </group>
                    <group>
                        <field name="verification_disable_inclusion_selection"/>
                    </group>
                    <group>
                        <field name="verification_disable_inclusion" nolabel='1'/>
                    </group>
                    <group>
                        <field name="verification_disable_verification_selection"/>
                    </group>
                    <group>
                        <field name="verification_disable_verification" nolabel='1'/>
                    </group>
                    <group>
                        <field name="verification_last_update_start_selection"/>
                    </group>
                    <group name="verification_last_update_start">
                        <field name="verification_last_update_start" nolabel='1'/>
                    </group>
                    <group>
                        <field name="verification_last_update_end_selection"/>
                    </group>
                    <group name="verification_last_update_end">
                        <field name="verification_last_update_end" nolabel='1'/>
                    </group>
                </group>
                <footer>
                    <button 
                        type="object"
                        name="do_verification_schedule_mass_edit"
                        string="Mass Edit"
                        class="oe_highlight"
                        />
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>

        </field>
    </record>

    <!-- More button Action -->
    <act_window 
        id="clv_verification_schedule_mass_edit_action"
        name="Verification Schedule Mass Edit"
        src_model="clv.verification.schedule"
        res_model="clv.verification.schedule.mass_edit"
        view_mode="form"
        key2="client_action_multi"
        target="new"
    />

</odoo>
