<odoo>

    <record id="clv_verification_mass_edit_view_form" model="ir.ui.view">
        <field name="name">clv.verification.mass_edit.form</field>
        <field name="model">clv.verification.mass_edit</field>
        <field name="arch" type="xml">
            <form>
                <div class="oe_right">
                </div>
                <label for="verification_ids"/>
                <field name="verification_ids"/>
                <group>
                    <group>
                        <field name="state_selection"/>
                    </group>
                    <group>
                        <field name="state" nolabel='1'/>
                    </group>
                </group>
                <footer>
                    <button 
                        type="object"
                        name="do_verification_mass_edit"
                        string="Mass Edit"
                        class="oe_highlight"
                        />
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>

        </field>
    </record>

    <!-- More button Action -->
    <act_window 
        id="clv_verification_mass_edit_action"
        name="Verification Mass Edit"
        src_model="clv.verification"
        res_model="clv.verification.mass_edit"
        view_mode="form"
        key2="client_action_multi"
        target="new"
    />

</odoo>
