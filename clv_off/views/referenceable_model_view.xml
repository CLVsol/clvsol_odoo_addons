<odoo>
        
    <record id="clv_off_code_view_form_referenceable_model" model="ir.ui.view">
        <field name="name">clv.off.code.form</field>
        <field name="model">clv.off.code</field>
        <field name="inherit_id" ref="clv_off.clv_off_code_view_form"/>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <group name="group_right" position="inside">
                <field name="ref_id"  options="{'no_open': False, 'no_create': True}"/>
                <field name="ref_model"/>
                <field name="ref_name"/>
                <field name="ref_code"/>
                <field name="ref_suport" invisible="True"/>
            </group>
        </field>
    </record>

    <record id="clv_off_code_view_tree_referenceable_model" model="ir.ui.view">
        <field name="name">clv.off.code.tree</field>
        <field name="model">clv.off.code</field>
        <field name="inherit_id" ref="clv_off.clv_off_code_view_tree"/>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <field name="off_instance_id" position="before">
                <field name="ref_id"/>
                <field name="ref_suport" invisible="True"/>
            </field>
        </field>
    </record>

    <record id="clv_off_code_view_search_referenceable_model" model="ir.ui.view">
        <field name="name">clv.off.code.search</field>
        <field name="model">clv.off.code</field>
        <field name="inherit_id" ref="clv_off.clv_off_code_view_search"/>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <field name="off_instance_id" position="before">
                <field name="ref_id"/>
                <field name="ref_model"/>
                <field name="ref_name"/>
                <field name="ref_code"/>
            </field>
            <filter name="inactive" position="before">
                <filter name="filter_used" string="Used" domain="[('ref_id','!=',False)]"/>
                <filter name="filter_not_used" string="Not Used" domain="[('ref_id','=',False)]"/>
                <separator/>
            </filter>
            <group name="group_by" position="inside">
                <filter name="filter_ref_model" string="Refers to (Model)" context="{'group_by': 'ref_model'}"/>
                <filter name="filter_ref_name" string="Refers to (Name)" context="{'group_by': 'ref_name'}"/>
            </group>
        </field>
    </record>

</odoo>
