<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="clv_animal_breed_view_form" model="ir.ui.view">
            <field name="name">clv.animal.breed.form</field>
            <field name="model">clv.animal.breed</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div name="button_box" class="oe_right oe_button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive" groups="clv_base.group_reguser">
                                <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        <div name="title" class="oe_title">
                            <label for="species_id" class="oe_edit_only"/>
                            <h2><field name="species_id" placeholder="Species..." options="{'no_open': False, 'no_create': True}"/></h2>
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" default_focus="1" placeholder="Breed..."/></h1>
                            <label for="code" class="oe_edit_only"/>
                            <h2><field name="code" placeholder="Breed Code..."/></h2>
                        </div>
                        <field name="notes" placeholder="Notes..." colspan="4"/>
                        <notebook>
                            <page string="Animals">
                                <group>
                                    <field name="animal_ids" colspan="4" nolabel="1"/>
                                </group>
                            </page>
                            <page name="settings" string="Settings" groups="clv_base.group_reguser" invisible="True">
                                <group name="settings">
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="clv_animal_breed_view_tree" model="ir.ui.view">
            <field name="name">clv.animal.breed.tree</field>
            <field name="model">clv.animal.breed</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="species_id"/>
                    <field name="notes"/>
                </tree>
            </field>
        </record>
        
        <record id="clv_animal_breed_view_search" model="ir.ui.view">
            <field name="name">clv.animal.breed.search</field>
            <field name="model">clv.animal.breed</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="species_id"/>
                    <field name="notes"/>
                    <separator/>
                    <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                    <group expand="0" string="Group By...">
                        <filter string="Animal Species" domain="[]" context="{'group_by':'species_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="clv_animal_breed_action" model="ir.actions.act_window">
            <field name="name">Animal Breeds</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">clv.animal.breed</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="clv_animal_breed_view_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="view_id" eval="False"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a new animal breed.
              </p>
            </field>
        </record>
        
        <record id="clv_animal_view_tree_breed" model="ir.ui.view">
            <field name="name">clv.animal.tree</field>
            <field name="model">clv.animal</field>
            <field name="inherit_id" ref="clv_animal_view_tree"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <field name="gender" position="after">
                    <field name="breed_id"/>
                </field>
            </field>
        </record>

        <record id="clv_animal_view_form_breed" model="ir.ui.view">
            <field name="name">clv.animal.form</field>
            <field name="model">clv.animal</field>
            <field name="inherit_id" ref="clv_animal_view_form"/>
            <field name="priority" eval="7"/>
            <field name="arch" type="xml">
                <field name="gender" position="after">
                    <field name="breed_id" placeholder="Breed..." options="{'no_open': False, 'no_create': True}"/>
                </field>
            </field>
        </record>

        <record id="clv_animal_view_search_breed" model="ir.ui.view">
            <field name="name">clv.animal.search</field>
            <field name="model">clv.animal</field>
            <field name="inherit_id" ref="clv_animal_view_search"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <field name="gender" position="after">
                    <field name="breed_id"/>
                </field>
                <group name="group_by" position="inside">
                    <filter string="Breed" context="{'group_by': 'breed_id'}"/>
                </group>
            </field>
        </record>

        <record id="clv_animal_species_view_form_breed" model="ir.ui.view">
            <field name="name">clv.animal.species.form</field>
            <field name="model">clv.animal.species</field>
            <field name="inherit_id" ref="clv_animal_species_view_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <page name="animals" position="before">
                    <page name="breeds" string="Breeds">
                        <group>
                            <field name="breed_ids" colspan="4" nolabel="1"/>
                        </group>
                    </page>
                </page>
            </field>
        </record>

    </data>
</odoo>
