<odoo>

    <record id="clv_global_settings_view_form_filestore" model="ir.ui.view">
        <field name="name">clv.global_settings.form</field>
        <field name="model">clv.global_settings</field>
        <field name="inherit_id" ref="clv_base.clv_global_settings_view_form"/>
        <field name="priority" eval="10" />
        <field name="arch" type="xml">
            <header name="global_settings_header" position="after">
                <group string="File Store">
                    <group>
                        <field name="filestore_path"/>
                        <field name="current_filestore_path" invisible="True"/>
                    </group>
                </group>
            </header>
        </field>
    </record>
       
</odoo>
